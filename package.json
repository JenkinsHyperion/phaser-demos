{
  "name": "phaser-rts",
  "version": "1.0.0",
  "description": "An online multiplayer Real-Time-Strategy game using Phaser.io and Express.",
  "main": "server.js",
  "scripts": {
    "clean": "rimraf ./public/js",
    "build": "tsc",
    "watch:build": "tsc --watch",
    "watch:server": "nodemon server.js",
    "start": "npm-run-all clean build --silent --parallel watch:build watch:server --print-label"
  },
  "prettier": {
    "semi": true,
    "arrowParens": "always",
    "singleQuote": true,
    "tabWidth": 2
  },
  "keywords": [],
  "author": "David, Matt",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "phaser": "^3.19.0"
  },
  "devDependencies": {
    "nodemon": "^1.19.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "typescript": "^3.6.3"
  }
}
